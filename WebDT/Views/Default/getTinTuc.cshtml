@model IEnumerable<WebDT.Models.News>

<div class="product-widget-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="single-product-widget">
                @foreach (var i in Model)
                {
                    <div class="single-wid-product">

                        <a href="#"><img src="~/Content/img/@i.img" alt="" class="product-thumb"></a>
                        <div> <h2><a href="#"><b>@i.name</b></a></h2></div>
                        <div> <h2>@i.detail</h2></div>

                    </div>
                }
            </div>
        </div>
    </div>
</div>

