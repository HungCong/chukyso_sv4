@model WebDT.Models.DangNhap

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/admin/Views/Shared/_Mylayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-red">

            <div class="panel-heading">
                Thông Tin
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Details", "DangNhaps", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div>
                        <h4 style="margin-left:35%">THÔNG TIN CHI TÀI KHOẢN</h4>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayName("Tài Khoản:")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.username)
                            </dd>

                            <dt>
                                @Html.DisplayName("Mật khẩu:")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.password)
                            </dd>

                            <dt>
                                @Html.DisplayName("Họ Tên:")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.name)
                            </dd>

                            <dt>
                                @Html.DisplayName("Địa Chỉ:")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.address)
                            </dd>

                            <dt>
                                @Html.DisplayName("E-Mail:")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.email)
                            </dd>

                            <dt>
                                @Html.DisplayName("Số Điện Thoại:")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.phone)
                            </dd>

                            <dt>
                                @Html.DisplayName("Trạng thái:")
                            </dt>

                            <dd>
                                @(Model.status.GetValueOrDefault(false) ? "Hiển Thị" : "Ẩn")
                            </dd>

                        </dl>
                    </div>
                    <p>
                        @Html.ActionLink("Sửa Lại", "Edit", new { id = Model.id }) |
                        @Html.ActionLink("Quay lại", "Index")
                    </p>
                }
            </div>
            
        </div>
    </div>
</div>

@section _Footer{
     
}